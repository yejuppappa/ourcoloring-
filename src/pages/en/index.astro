---
import Layout from "@/layouts/Layout.astro";
import ColoringConverter from "@/components/ColoringConverter";
import { t } from "@/i18n";

const i18n = t("en");
const l = i18n.landing;
---

<Layout>
  <a
    href="#converter"
    class="sr-only focus:not-sr-only focus:fixed focus:left-4 focus:top-4 focus:z-50 focus:rounded-lg focus:bg-[#FF6B4A] focus:px-4 focus:py-2 focus:text-white"
  >
    Skip to converter
  </a>

  <main class="mx-auto max-w-2xl px-4">
    <section class="pb-10 pt-12 text-center md:pt-16">
      <h1
        class="whitespace-pre-line font-['Nunito'] text-3xl font-extrabold leading-tight text-[#3D3530] md:text-4xl"
      >
        {i18n.hero.title}
      </h1>
      <p class="mt-4 text-base leading-relaxed text-[#7A7067] md:text-lg">
        {i18n.hero.subtitle}
      </p>
      <!-- Educational benefit badge -->
      <div class="mt-5 inline-flex items-center gap-2 rounded-full bg-[#E8F5E9] px-4 py-2 text-sm font-medium text-[#2E7D32]">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" viewBox="0 0 20 20" fill="currentColor">
          <path fill-rule="evenodd" d="M6.267 3.455a3.066 3.066 0 001.745-.723 3.066 3.066 0 013.976 0 3.066 3.066 0 001.745.723 3.066 3.066 0 012.812 2.812c.051.643.304 1.254.723 1.745a3.066 3.066 0 010 3.976 3.066 3.066 0 00-.723 1.745 3.066 3.066 0 01-2.812 2.812 3.066 3.066 0 00-1.745.723 3.066 3.066 0 01-3.976 0 3.066 3.066 0 00-1.745-.723 3.066 3.066 0 01-2.812-2.812 3.066 3.066 0 00-.723-1.745 3.066 3.066 0 010-3.976 3.066 3.066 0 00.723-1.745 3.066 3.066 0 012.812-2.812zm7.44 5.252a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
        </svg>
        {l.benefitText}
      </div>
    </section>

    <section id="converter">
      <div id="converter-skeleton" class="converter-skeleton">
        <div class="converter-skeleton-inner">
          <div class="converter-skeleton-icon"></div>
          <div class="converter-skeleton-bar"></div>
          <div class="converter-skeleton-bar short"></div>
        </div>
      </div>
      <ColoringConverter client:load t={i18n.converter} locale="en" />
    </section>

    <section class="mt-20 text-center">
      <h2 class="font-['Nunito'] text-2xl font-bold text-[#3D3530]">
        {l.howTitle}
      </h2>
      <div class="mt-8 grid grid-cols-1 gap-6 sm:grid-cols-3">
        <div class="group rounded-2xl bg-white p-6 shadow-sm ring-1 ring-[#E8DFD6] transition-all hover:shadow-md hover:-translate-y-0.5">
          <div class="mx-auto flex h-14 w-14 items-center justify-center rounded-full bg-gradient-to-br from-[#FFF0E5] to-[#FFE0D0] text-2xl transition-transform group-hover:scale-110">ğŸ“¸</div>
          <h3 class="mt-4 font-bold text-[#3D3530]">{l.step1Title}</h3>
          <p class="mt-1 text-sm leading-relaxed text-[#7A7067]">{l.step1Desc}</p>
        </div>
        <div class="group rounded-2xl bg-white p-6 shadow-sm ring-1 ring-[#E8DFD6] transition-all hover:shadow-md hover:-translate-y-0.5">
          <div class="mx-auto flex h-14 w-14 items-center justify-center rounded-full bg-gradient-to-br from-[#E8F5E9] to-[#C8E6C9] text-2xl transition-transform group-hover:scale-110">âœ¨</div>
          <h3 class="mt-4 font-bold text-[#3D3530]">{l.step2Title}</h3>
          <p class="mt-1 text-sm leading-relaxed text-[#7A7067]">{l.step2Desc}</p>
        </div>
        <div class="group rounded-2xl bg-white p-6 shadow-sm ring-1 ring-[#E8DFD6] transition-all hover:shadow-md hover:-translate-y-0.5">
          <div class="mx-auto flex h-14 w-14 items-center justify-center rounded-full bg-gradient-to-br from-[#E3F2FD] to-[#BBDEFB] text-2xl transition-transform group-hover:scale-110">ğŸ–¨ï¸</div>
          <h3 class="mt-4 font-bold text-[#3D3530]">{l.step3Title}</h3>
          <p class="mt-1 text-sm leading-relaxed text-[#7A7067]">{l.step3Desc}</p>
        </div>
      </div>
    </section>

    <section class="mt-20">
      <div class="grid grid-cols-2 gap-4 sm:grid-cols-4">
        <div class="flex flex-col items-center rounded-2xl bg-white p-5 text-center shadow-sm ring-1 ring-[#E8DFD6] transition-all hover:shadow-md">
          <span class="text-2xl">ğŸ”’</span>
          <p class="mt-2 text-xs font-semibold text-[#3D3530]">{l.trustPrivacy}</p>
        </div>
        <div class="flex flex-col items-center rounded-2xl bg-white p-5 text-center shadow-sm ring-1 ring-[#E8DFD6] transition-all hover:shadow-md">
          <span class="text-2xl">âš¡</span>
          <p class="mt-2 text-xs font-semibold text-[#3D3530]">{l.trustFast}</p>
        </div>
        <div class="flex flex-col items-center rounded-2xl bg-white p-5 text-center shadow-sm ring-1 ring-[#E8DFD6] transition-all hover:shadow-md">
          <span class="text-2xl">ğŸ†“</span>
          <p class="mt-2 text-xs font-semibold text-[#3D3530]">{l.trustFree}</p>
        </div>
        <div class="flex flex-col items-center rounded-2xl bg-white p-5 text-center shadow-sm ring-1 ring-[#E8DFD6] transition-all hover:shadow-md">
          <span class="text-2xl">ğŸ“±</span>
          <p class="mt-2 text-xs font-semibold text-[#3D3530]">{l.trustMobile}</p>
        </div>
      </div>
    </section>

    <section class="mt-20 rounded-2xl bg-white p-6 shadow-sm ring-1 ring-[#E8DFD6]">
      <h2 class="font-['Nunito'] text-xl font-bold text-[#3D3530]">
        {l.seoTitle}
      </h2>
      <p class="mt-3 text-sm leading-relaxed text-[#7A7067]">
        {l.seoContent}
      </p>
    </section>

    <section class="mt-20 pb-10 text-center">
      <h2 class="font-['Nunito'] text-xl font-bold text-[#3D3530]">
        {l.ctaTitle}
      </h2>
      <a
        href="#converter"
        class="mt-5 inline-block rounded-2xl bg-gradient-to-r from-[#FF6B4A] to-[#FF8F6B] px-8 py-3.5 font-bold text-white shadow-lg shadow-[#FF6B4A]/25 transition-all hover:scale-105 hover:shadow-xl active:scale-95"
      >
        {l.ctaButton}
      </a>
    </section>
  </main>

  <footer
    class="mt-8 border-t border-[#E8DFD6] bg-white/50 py-8 text-center text-sm text-[#A09890]"
  >
    <div class="mx-auto flex max-w-2xl flex-col items-center gap-3 px-4">
      <div class="flex gap-4">
        <a href="/en/how-to-print/" class="underline hover:text-[#3D3530]">
          {i18n.footer.printGuide}
        </a>
        <a href="/ko/" class="underline hover:text-[#3D3530]">í•œêµ­ì–´</a>
      </div>
      <p>{i18n.footer.copyright}</p>
    </div>
  </footer>
</Layout>
